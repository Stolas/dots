report.inbox.labels          = ID,Description,P,Urg
report.inbox.sort            = urgency

report.all.columns           = id,description,priority,urgency
report.all.description       = All
report.all.filter            = status:pending limit:page
report.all.labels            = ID,Description,P,Urg
report.all.sort              = urgency

# Contexts
context.work=+@work -@home
